<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <FrameLayout
            android:id="@+id/monitor_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pic_camera" />

        <ImageView
            android:id="@+id/up_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_up"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/down_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/btn_down"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_left"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_right"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:background="@drawable/bg_tab_dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/monitor_switch_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:src="@drawable/btn_start_normal" />
        </LinearLayout>

        <!--
            android:layout_centerVertical="true"
            android:layout_marginStart="100sp"
            这两句这么写时时因为排版起来更好看
            可以简化为一句
            android:layout_centerInParent="true"
        -->
        <LinearLayout
            android:id="@+id/lamp_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="100sp">

            <ImageView
                android:id="@+id/lamp_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pic_lamp_off" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lamp_linearLayout"
            android:layout_centerHorizontal="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/lamp_switch_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:src="@drawable/btn_switch_off" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/auto_settings_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lamp_linearLayout"
            android:layout_marginStart="30sp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15sp"
                android:text="自动设置"
                android:textColor="@android:color/white"
                android:textSize="32sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="设置开："
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />

                <EditText
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:background="@android:color/white"
                    android:paddingStart="15sp"
                    android:text="18:00"
                    android:textColor="@android:color/black"
                    android:textSize="32sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:text="设置关："
                    android:textColor="@android:color/white"
                    android:textSize="32sp" />

                <EditText
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15sp"
                    android:background="@android:color/white"
                    android:paddingStart="15sp"
                    android:text="6:00"
                    android:textColor="@android:color/black"
                    android:textSize="32sp" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>